# IPFS Configuration
IPFS_NODE_URL=http://ipfs:5001
IPFS_API_KEY=
IPFS_GATEWAY_URL=http://ipfs:8080

# JWT Configuration
# For production use 'file:/app/secrets/jwt-secret' instead of hardcoded value
JWT_SECRET=file:/app/secrets/jwt-secret
JWT_EXPIRATION=24
JWT_ISSUER=tracepost-larvae-api

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=app.log

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development/Production Mode
ENVIRONMENT=development