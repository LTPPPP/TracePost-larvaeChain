# Security
SECRET_KEY=your_secret_key_at_least_32_characters_long

# Database configuration
DATABASE_URL=postgresql://vietnam_chain:vietnam_chain@localhost:5432/vietnam_chain
ASYNC_DATABASE_URL=postgresql+asyncpg://vietnam_chain:vietnam_chain@localhost:5432/vietnam_chain

# Docker database configuration (for when using Docker)
DB_USER=vietnam_chain
DB_PASSWORD=vietnam_chain
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vietnam_chain

# CORS and debug settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
ALLOWED_HOSTS=localhost,127.0.0.1
DEBUG=true

# Postgres Admin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/app.log

# Blockchain settings - Ethereum (disabled for now)
BLOCKCHAIN_ETHEREUM_ENABLED=false
BLOCKCHAIN_SUBSTRATE_ENABLED=false
BLOCKCHAIN_VIETNAMCHAIN_ENABLED=false