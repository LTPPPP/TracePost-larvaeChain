# Server Configuration
SERVER_PORT=8080
SERVER_TIMEOUT=30
SERVER_HOST=0.0.0.0

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=post_larvae
DB_PASSWORD=post_larvae
DB_NAME=post_larvae
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=20
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_LIFETIME=300

# Blockchain Configuration
BLOCKCHAIN_NODE_URL=http://blockchain-mock:8545
BLOCKCHAIN_CHAIN_ID=tracepost-chain
BLOCKCHAIN_ACCOUNT=tracepost
BLOCKCHAIN_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
BLOCKCHAIN_CONSENSUS=pbft
BLOCKCHAIN_NETWORK_ID=tracepost-network

# Interoperability Configuration
INTEROP_ENABLED=true
INTEROP_RELAY_ENDPOINT=http://blockchain-mock:8546/ibc
INTEROP_ALLOWED_CHAINS=ethereum-mainnet,polygon-mainnet,bsc-mainnet
INTEROP_DEFAULT_STANDARD=GS1-EPCIS

# Identity Configuration
IDENTITY_ENABLED=true
IDENTITY_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000001
